    <script type='text/javascript' src='/js/jquery-scrollto.js'></script>
    <script type='text/javascript' src='/js/jquery.lightbox_me.js'></script>
    <script type='text/javascript' src='/js/jquery.bookblock.js'></script>
    -->
    <!--[if lt IE 10]>
    <script type="text/javascript" src="/js/PIE.js"></script>
    <![endif]-->
    <script type='text/javascript' src='/js/site.js'></script>
    <script type='text/javascript' src='/js/SiteCatalyst.js'></script>


    <link rel="icon"
          type="image/ico"
          href="/img/AssetMark_Icon_16.ico">
    
    @SC.VisitorIdentification()

</head>

<body class="@CssClass">

    @SC.Placeholder("Header")

    @SC.Placeholder("Container")

    @SC.Placeholder("Footer")

</body>
</html>
