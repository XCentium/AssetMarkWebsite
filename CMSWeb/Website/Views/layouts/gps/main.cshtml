@using Sitecore.Presentation
@using Sitecore.Mvc.Analytics.Extensions


@{
    Layout = null;
    var SC = Html.Sitecore();

    var contextItem = RenderingContext.Current.ContextItem;
    var parentItem = contextItem.Parent;
    string CssClass = string.Format("{0} {1}", contextItem.Name, parentItem.Name);

    System.Func<Sitecore.Data.Items.Item, Sitecore.Data.Items.Item, string> titleFunc = (rootItem, currentItem) =>
      {
          var title = rootItem.GetText("title");
          if (currentItem != null)
          {
              title += " &ndash; " + currentItem.GetText("title");
          }
          return title;
      };

}
<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@SC.LayoutTitle(titleFunc)</title>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.9.2/themes/base/jquery-ui.css" />
    <script src="//code.jquery.com/jquery-1.8.3.js"></script>
    <script src="//code.jquery.com/ui/1.9.2/jquery-ui.js"></script>

    <link href="~/CMSContent/gps/css/main.css" rel="stylesheet" />
    <script src="~/CMSContent/gps/js/html5.js"></script>
    <script type='text/javascript' src='~/js/SiteCatalyst.js'></script>
    <link rel="icon"
          type="image/ico"
          href="/img/AssetMark_Icon_16.ico" />

    @SC.VisitorIdentification()
</head>

<body class="@SC.Field("BodyCssClass")">

    @SC.Placeholder("Header")

    @SC.Placeholder("Container")

    @SC.Placeholder("Footer")

</body>
</html>
